{
  "version": "1.0",
  "type": "tool",
  "name": "analyze_sentiment",
  "description": "Analyzes the sentiment of a given caption or phrase.",
  "model": "gpt-4o-mini",
  
  "input_schema": {
    "type": "object",
    "properties": {
      "text": { "type": "string", "description": "The text or caption to analyze." }
    },
    "required": ["text"]
  },

  "output_schema": {
    "type": "object",
    "properties": {
      "sentiment": { "type": "string", "enum": ["positive", "neutral", "negative"] }
    }
  }
}
