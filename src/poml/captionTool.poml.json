{
  "version": "0.1",
  "type": "tool",
  "title": "Image Caption Generator Tool",
  "name": "generate_caption",
  "description": "Generates a descriptive caption for an image using OpenAI's vision model.",
  "model": "gpt-4o-mini",

  "input_schema": {
    "type": "object",
    "properties": {
      "image": {
        "oneOf": [
            { "type": "string", "format": "base64" },
            { "type": "string", "format": "binary" }
        ],
        "description": "Base64 encoded image data"
      },
      "imageBase64": {
        "type": "string", 
        "description": "Base64 encoded image data (alternative property name)"
      }
    },
    "anyOf": [
      { "required": ["image"] },
      { "required": ["imageBase64"] }
    ]
  },

  "output_schema": {
    "type": "object",
    "properties": {
      "caption": { 
        "type": "string",
        "description": "Generated caption for the image."
      }
    },
    "required": ["caption"]
  }
}

